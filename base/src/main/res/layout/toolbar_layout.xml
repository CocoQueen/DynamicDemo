<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/white"
    android:visibility="visible"
    app:titleTextColor="#ffffff">

    <TextView
        android:id="@+id/base_title"
        style="@style/toolbar_text_34white"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:lines="1"
        android:textStyle="bold"
        android:textSize="@dimen/x18"
        android:scrollHorizontally="true"
        android:text="@string/app_name"
        android:textColor="@color/black_201c02" />

    <TextView
        android:id="@+id/base_change"
        style="@style/toolbar_text_34white"
        android:layout_gravity="left"
        android:gravity="center_vertical"
        android:scrollHorizontally="true"
        android:text=""
        android:textColor="#5a5a5a"
        android:visibility="visible" />


    <cn.bingoogolapple.badgeview.BGABadgeImageView
        android:id="@+id/base_mine_right"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:layout_width="17px"
        android:layout_height="17px"
        android:layout_gravity="right"
        android:scrollHorizontally="true"
        android:visibility="visible"
        app:badge_dragable="true"
        app:badge_gravity="rightTop"
        app:badge_horizontalMargin="0dp"
        app:badge_textSize="20px"
        app:badge_verticalMargin="0dp" />

    <cn.bingoogolapple.badgeview.BGABadgeImageView
        android:id="@+id/base_mine_left"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:layout_width="17px"
        android:layout_height="17px"
        android:layout_gravity="left"
        android:layout_margin="14px"
        android:scrollHorizontally="true"
        android:visibility="visible"

        />

    <TextView
        android:id="@+id/base_right"
        style="@style/toolbar_text_34white"
        android:layout_gravity="right"
        android:paddingRight="20px"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="退出"
        android:textColor="@color/white"
        android:visibility="gone" />


</android.support.v7.widget.Toolbar>